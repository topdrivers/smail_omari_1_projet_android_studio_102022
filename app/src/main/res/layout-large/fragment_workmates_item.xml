<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_workmate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/workmates_item_constraint_margin_bottom"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_workmate_avatar"
        android:layout_width="@dimen/workmates_item_width_avatar"
        android:layout_height="@dimen/workmates_item_height_avatar"
        android:layout_marginStart="@dimen/workmates_item_avatar_start"
        android:layout_marginTop="@dimen/workmates_item_avatar_top"
        android:layout_marginBottom="@dimen/workmates_item_avatar_bottom"
        android:contentDescription="@string/workmates_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/item_workmate_restaurant_choice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/workmates_item_resto_choice_start"
        android:layout_marginEnd="@dimen/workmates_item_resto_choice_end"
        android:singleLine="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/workmates_item_resto_choice_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/item_workmate_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_workmate_avatar"
        app:layout_constraintTop_toTopOf="@+id/item_workmate_avatar"
        tools:text="John hasn't decided yet"
        />

</androidx.constraintlayout.widget.ConstraintLayout>